{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Start MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "List Metrics",
      "type": "shell",
      "command": "./vs-code-usage.sh",
      "args": ["metrics"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Analyze Consensus Metrics", 
      "type": "shell",
      "command": "./vs-code-usage.sh",
      "args": ["analyze", "Consensus"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Generate Consensus Dashboard",
      "type": "shell", 
      "command": "./vs-code-usage.sh",
      "args": ["dashboard", "Consensus", "Solana Consensus Dashboard"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Search Rust Code",
      "type": "shell",
      "command": "./vs-code-usage.sh", 
      "args": ["search", "cluster_nodes_broadcast"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Open MCP Inspector",
      "type": "shell",
      "command": "./vs-code-usage.sh",
      "args": ["inspector"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
