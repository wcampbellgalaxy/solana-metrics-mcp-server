{
  "name": "solana-metrics-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for analyzing Solana metrics from InfluxDB and generating Grafana dashboards",
  "type": "module",
  "bin": {
    "solana-metrics-mcp-server": "./build/index.js"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "test": "npm run build && node build/test-simple.js",
    "test:interactive": "npm run build && node build/test-simple.js"
  },
  "keywords": [
    "mcp",
    "solana",
    "metrics",
    "influxdb",
    "grafana",
    "blockchain"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "typescript": "^5.8.3"
  }
}
